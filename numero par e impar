
def es_par(numero):
    """Determinar si un número es par"""
    return numero % 2 == 0


def main():
    print("Determinar si un Número es Par o Impar")

    numero = int(input("Ingrese un número: "))

    if es_par(numero):
        print(f"El número {numero} es par")
    else:
        print(f"El número {numero} es impar")


if __name__ == "__main__":
    main()